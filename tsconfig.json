{
  "include": ["./src/**/*"],
  "exclude": ["dist", "node_modules"],
  "rootDir": "./",
  "baseUrl": "./",
  "paths": {
    "@/*": ["./*"]
  },
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "esModuleInterop": true,
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmit": true,
    "skipLibCheck": true,
    "moduleResolution": "node"
  }
}
