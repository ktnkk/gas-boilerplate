{
  "include": ["./src/**/*"],
  "exclude": ["dist", "node_modules"],
  "compilerOptions": {
    "target": "ES2019",
    "lib": ["esnext"],
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "types": ["google-apps-script"],
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    }
  }
}
